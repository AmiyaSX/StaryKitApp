<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_home_bg"
    tools:context=".home.ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:background="@drawable/bg_story_card"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:foreground="@drawable/nights"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="-60dp"
            android:background="@drawable/color_story_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="晚安故事会"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="195dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginTop="100dp"
        android:background="@drawable/color_study_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:foreground="@drawable/study"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/color_study_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_study"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="学习区"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="195dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/color_game_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:foreground="@drawable/game"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="45dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/color_game_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_game"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="游戏区"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>