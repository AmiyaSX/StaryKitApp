<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_home_bg"
    tools:context=".home.ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/bg_story_card"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="35dip"
            android:foreground="@drawable/nights"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/color_story_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="晚安故事会"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/color_study_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:foreground="@drawable/study"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="45dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/color_study_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_study"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="学习区"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginStart="210dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/color_game_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="7dip"
            android:foreground="@drawable/game"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="45dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/color_game_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_game"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="游戏区"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>