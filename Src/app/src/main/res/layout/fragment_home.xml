<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_home_bg"
    tools:context=".home.ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/story_card"
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_story_card"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:foreground="@drawable/nights"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="-50dp"
            android:background="@drawable/color_story_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="晚安故事会"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/study_card"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:layout_toLeftOf="@+id/game_card"
        android:background="@drawable/color_study_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:foreground="@drawable/study"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/color_study_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_study"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="学习区"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/game_card"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/color_game_card_bg"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:foreground="@drawable/game"
            app:cardCornerRadius="50dp" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/color_game_tab_bg"
            android:elevation="20dp">

            <TextView
                android:id="@+id/text_game"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="游戏区"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </FrameLayout>

    </FrameLayout>

</RelativeLayout>