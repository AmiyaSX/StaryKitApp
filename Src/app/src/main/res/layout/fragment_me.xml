<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.me.MeFragment">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_mine_user"
        android:elevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0.5dip"
            android:layout_marginTop="0.5dip"
            android:foreground="@drawable/image_mine_user"
            app:cardCornerRadius="50dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_username"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="175dp"
        android:gravity="center"
        android:text="Annla"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/text_mystory"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text="我的故事"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="250dip"
        android:foreground="@drawable/image_mine_book"
        app:cardCornerRadius="50dp" />


    <TextView
        android:id="@+id/text_mistakes"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text="错题集"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="145dip"
        android:layout_marginTop="250dip"
        android:foreground="@drawable/image_mine_target"
        app:cardCornerRadius="50dp" />

    <TextView
        android:id="@+id/text_mygame"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="355dp"
        android:gravity="center"
        android:text="我的游戏"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="275dip"
        android:layout_marginTop="250dip"
        android:foreground="@drawable/image_mine_bear"
        app:cardCornerRadius="50dp" />


</RelativeLayout>