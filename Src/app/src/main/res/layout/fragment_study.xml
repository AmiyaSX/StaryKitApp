<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_new_study_bg"
    tools:context=".home.ui.home.HomeFragment">

    <FrameLayout
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/single_add_bg"
        android:elevation="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="-30dip"
            android:foreground="@drawable/single_bg"
            app:cardCornerRadius="50dp" />

            <TextView
                android:id="@+id/single_study"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="-35dip"
                android:gravity="center"
                android:text="简单算术区"
                android:textColor="@color/black"
                android:textSize="22sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_gravity="right"
        android:layout_marginStart="215dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/complex_add_bg"
        android:elevation="25dp">

        <androidx.cardview.widget.CardView
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="-30dip"
            android:foreground="@drawable/complex_bg"
            app:cardCornerRadius="50dp" />

            <TextView
                android:id="@+id/complex_study"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="-40dp"
                android:gravity="center"
                android:text="复杂算术区"
                android:textColor="@color/black"
                android:textSize="22sp" />
        </FrameLayout>

</RelativeLayout>