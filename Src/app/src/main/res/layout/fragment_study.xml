<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/image_new_study_bg">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="120dp">

        <RelativeLayout
            android:id="@+id/study_card1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/single_add_bg">

            <ImageView
                android:id="@+id/study_single_bg"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/single_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/study_single_bg"
                android:layout_centerInParent="true"
                android:text="简单算术区"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>


     </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:orientation="horizontal"
             android:gravity="center_horizontal"
             android:layout_marginTop="40dp">
        <RelativeLayout
            android:id="@+id/study_card2"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/complex_add_bg">

            <ImageView
                android:id="@+id/study_complex_bg"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/complex_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/study_complex_bg"
                android:layout_centerInParent="true"
                android:text="复杂算术区"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>