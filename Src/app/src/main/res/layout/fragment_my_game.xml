<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.mygame.MyGameFragment"
    android:background="@drawable/image_my_game_bg">

    <RelativeLayout
        android:id="@+id/wuziqi"
        android:layout_width="300dp"
        android:layout_height="87dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/color_my_game_bg1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="14dp"
            android:text="五子棋"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/my_game_star1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shudu"
        android:layout_width="250dp"
        android:layout_height="87dp"
        android:layout_below="@+id/wuziqi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/color_my_game_bg2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="14dp"
            android:text="数独"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/my_game_star2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llk"
        android:layout_width="200dp"
        android:layout_height="87dp"
        android:layout_below="@+id/shudu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/color_my_game_bg3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="14dp"
            android:text="连连看"
            android:textColor="@color/black"
            android:textSize="45sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ball"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/llk"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/image_yellowball"
        android:orientation="horizontal">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_below="@+id/llk"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/image_my_game_bgcat"
        android:orientation="horizontal">
    </RelativeLayout>

</RelativeLayout>