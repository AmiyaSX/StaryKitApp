<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/game_card1"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_game_card1">

            <ImageView
                android:id="@+id/checkboard"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_checkerboard" />

            <TextView
                android:id="@+id/checkboard_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkboard"
                android:layout_centerInParent="true"
                android:text="五子棋"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_star" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/game_card1"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/game_card2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_game_card2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="成语接龙"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_star" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/game_card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_game_card3">

                <ImageView
                    android:id="@+id/game_card_image3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_game_ps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_card_image3"
                    android:layout_centerInParent="true"
                    android:text="连连看"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_star" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:id="@+id/game_card4"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_game_card4">

            <ImageView
                android:id="@+id/game_card_image4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_platte" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_card_image4"
                android:layout_centerInParent="true"
                android:text="填色游戏"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/ic_star" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/game_card5"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/game_card4"
            android:background="@drawable/bg_game_card5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="数独"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_star" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/game_card6"
        android:layout_width="290dp"
        android:layout_height="104dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_game_card6">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_ferris_wheel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:text="消消乐"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_star" />

    </RelativeLayout>

</LinearLayout>
